<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.grgbanking.grgacd.mapper.AcdEvaluationMapper">

    <resultMap id="resultMap" type="com.grgbanking.grgacd.model.AcdEvaluation">
        <id column="id" property="id"></id>
        <result column="call_id" property="callId"></result>
        <result column="result_type" property="resultType"></result>
        <result column="result" property="result"></result>
        <result column="score_id" property="scoreId"></result>
        <result column="description" property="desc"></result>
        <result column="created_time" property="createdTime"></result>
        <result column="update_time" property="updateTime"></result>
        <result column="del_time" property="delTime"></result>
        <result column="del_flag" property="delFlag"></result>
        <association property="calls" column="call_id" select="com.grgbanking.grgacd.mapper.AcdCallsMapper.selectById"></association>
        <association property="score" column="score_id" select="com.grgbanking.grgacd.mapper.AcdEvaluationScoreMapper.selectById"></association>
    </resultMap>

    <sql id="selectSql">
        select * from acd_evaluation evaluation
    </sql>

    <select id="getList" resultMap="resultMap">
        SELECT
            evaluation.*,
            agent.username
        FROM
            acd_evaluation evaluation
            LEFT JOIN acd_calls calls ON evaluation.call_id = calls.call_id
            LEFT JOIN sys_user agent ON calls.agent_id = agent.user_id
            ${ew.sqlSegment}
    </select>

</mapper>
