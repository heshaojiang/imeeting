<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.grgbanking.grgacd.mapper.AcdQueueMapper">

    <resultMap id="BaseResultMap" type="com.grgbanking.grgacd.model.AcdQueue">
        <result column="id" property="id"></result>
        <result column="queue_id" property="queueId"></result>
        <result column="queue_name" property="queueName"></result>
        <result column="description" property="description"></result>
        <result column="status" property="status"></result>
        <result column="created_time" property="createTime"></result>
        <result column="update_time" property="updateTime"></result>
        <result column="del_time" property="delTime"></result>
        <result column="del_flag" property="delFlag"></result>

    </resultMap>

    <sql id="Base_Column_List">
        SELECT  * FROM  acd_queue
    </sql>

    <select id="selectQueuePage" resultMap="BaseResultMap">
      <include refid="Base_Column_List"></include>
        <where>
            del_flag=0
            <if test="queueId != null and queueId != ''">
                AND queue_id = #{queueId}
            </if>
            <if test="queueName != null and queueName != ''">
                AND queue_name LIKE CONCAT('%',#{queueName},'%')
            </if>
            <if test="keyword != null and keyword != ''">
                <!--bind 标签的两个属性都是必选项， name 为绑定到上下文的变量名,value为OGNL表达式。-->
                <bind name="pattern" value="'%' + keyword + '%'"/>
                <choose>
                    <when test="_databaseId=='mysql'">
                        AND CONCAT( IFNULL(queue_id,''),IFNULL(queue_name,'') )
                    </when>
                    <when test="_databaseId=='oracle'">
                        AND CONCAT( nvl(queue_id,''),nvl(queue_name,'') )
                    </when>
                </choose>
                LIKE #{pattern}
            </if>
        </where>
    </select>

    <select id="selectQueueByAgentId" resultMap="BaseResultMap">
        SELECT
            queue.*
        FROM
            acd_queue  queue
        LEFT JOIN acd_agent_queue aq ON queue.queue_id = aq.queue_id
        WHERE
            aq.agent_id = #{agentId}
    </select>

</mapper>
