<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.pig.admin.mapper.SysRoleMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.github.pig.admin.model.entity.SysRole">
		<id column="role_id" property="roleId" />
		<result column="role_name" property="roleName" />
		<result column="role_code" property="roleCode" />
		<result column="role_desc" property="roleDesc" />
		<result column="remark" property="remark" />
		<result column="create_time" property="createTime" />
		<result column="update_time" property="updateTime" />
		<result column="del_flag" property="delFlag" />
	</resultMap>

	<!--roleDto-->
	<resultMap id="RoleDtoMap" type="com.github.pig.admin.model.dto.RoleDto">
		<id column="role_id" property="roleId" />
		<result column="role_name" property="roleName" />
		<result column="role_code" property="roleCode" />
		<result column="role_desc" property="roleDesc" />
		<result column="remark" property="remark" />
		<result column="create_time" property="createTime" />
		<result column="update_time" property="updateTime" />
		<result column="del_flag" property="delFlag" />
		<result column="dept_id" property="roleDeptId"/>
		<result column="name" property="deptName"/>
	</resultMap>

	<select id="selectRolePage" resultMap="RoleDtoMap">
		SELECT
			*
		FROM
			sys_role r
		LEFT JOIN sys_role_dept rd ON rd.role_id = r.role_id
		LEFT JOIN sys_dept d ON rd.dept_id = d.dept_id
		WHERE r.del_flag = 0
		ORDER BY r.role_id ASC
	</select>

	<select id="selectSysRolePage" resultMap="BaseResultMap">
		SELECT
		*
		FROM
		sys_role r
		WHERE  r.del_flag = 0
		<if test="roleName != null and roleName != ''">
			and r.role_name LIKE CONCAT('%',#{roleName},'%')
		</if>
	</select>

	<select id="selectImeetingRolePage" resultMap="BaseResultMap">
		SELECT
		*
		FROM
		sys_role r
		WHERE  r.del_flag = 0 and remark in (0,2)
		<if test="roleName != null and roleName != ''">
			and r.role_name LIKE CONCAT('%',#{roleName},'%')
		</if>
	</select>

	<select id="selectListByDeptId" resultMap="BaseResultMap">
		SELECT
			r.role_id,
			r.role_name,
			r.role_code,
			r.role_desc,
			r.create_time,
			r.update_time,
			r.del_flag
		FROM sys_role r LEFT OUTER JOIN sys_role_dept rd ON rd.role_id = r.role_id
		WHERE rd.dept_id = #{deptId}
	</select>

	<select id="selectListByUserId" resultMap="BaseResultMap">
		SELECT
			r.role_name,
			r.role_code,
			r.role_desc
		FROM sys_user u,sys_role r,sys_user_role ur
		WHERE u.user_id=ur.user_id and r.role_id=ur.role_id and u.user_id=#{userId}
	</select>
</mapper>
